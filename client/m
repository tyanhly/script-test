repeat() {
    if [[ $2 -eq 0 ]]; then
      return;
    fi;
    v=`printf "%0.s$1" $(seq 0 $2)`
    echo -en "$v"
}


function bar {
    fill=`bc <<< "scale=2; $1/$2*$3"`
    fill=${fill%.*}
    blank=$(($3-$fill))

    echo -en "["
    repeat "|" $fill
    repeat " " $blank
    echo -en "]"
}

